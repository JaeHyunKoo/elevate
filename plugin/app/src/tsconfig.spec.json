{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../out-tsc/spec",
		"baseUrl": "./",
		"module": "commonjs",
		"target": "es5",
		"types": [
			"jasmine",
			"node",
			"chrome"
		],
		"paths": {
			"@elevate/shared/constants": [
				"../modules/shared/constants/"
			],
			"@elevate/shared/data": [
				"../modules/shared/data/"
			],
			"@elevate/shared/electron": [
				"../modules/shared/electron/"
			],
			"@elevate/shared/sync": [
				"../modules/shared/sync/"
			],
			"@elevate/shared/models": [
				"../modules/shared/models/"
			],
			"@elevate/shared/resolvers": [
				"../modules/shared/resolvers/"
			],
			"@elevate/shared/exceptions": [
				"../modules/shared/exceptions/"
			],
			"@elevate/shared/tools": [
				"../modules/shared/tools/"
			]
		}
	},
	"files": [
		"test.ts",
		"polyfills.ts"
	],
	"include": [
		"**/*.spec.ts",
		"**/*.d.ts"
	]
}
